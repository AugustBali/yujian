/* pages/orderInfo/orderInfo.wxss */
.orderIfo{
  width: 100%;
  height: 100%;
  background: #eef2f7;
  padding-top: 2rpx;
  box-sizing: border-box;
}
.tip{
  width: 100%;
  height: 300rpx;
  background: #fff;
  margin-top: 20rpx;
}
.copyOrderCode{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 25rpx;
  display: flex;
  margin: 0 auto;
  border-bottom: 1rpx solid #ddd;
  flex-direction: row;
  justify-content: space-between;
}
.contact{
  width: 40rpx;
  height: 70rpx;
  overflow: hidden;
  margin-left: 110rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.contact image{
  width: 100%;
  height: 100%;
}
.orderDown {
  width: 90%;
  margin: 0 auto;
  display: flex;
  padding: 25rpx 0;
  box-sizing: border-box;
}
.orderDown .img{
  width: 200rpx;
  height: 150rpx;
  overflow: hidden;
  background: #ddd;
}
.orderDown .img image{
  width: 100%;
  height: 100%;
}
.goods_info{
  display: flex;
  font-size: 25rpx;
}
.info_title text{
  width: 400rpx;
  display: block;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.goods_num{
   margin-top: 10rpx;
  margin-left: 50rpx;
}
.addr{
  width: 100%;
  /* height: 150rpx; */
  background: #fff;
  display: flex;
  margin-top: 20rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.addr_tip{
  width: 100%;
  /* display: flex; */
  flex-direction: row;
  font-size: 30rpx;
}
.addr_info{
  font-size: 36rpx;
  margin-bottom: 20rpx;
  font-weight: bold
}
.tip_name{
  width: 200rpx;
  display: flex;
}
.tip_phone{
  display: flex;
}
.addr_bot{
  display: flex;
  width: 100%;
  font-size: 30rpx;
  /* color: #999; */
  /* margin-top: 20rpx; */
}
.addr_title{
  font-weight: bold
}
.detail{
  width: 100%;
  height: 500rpx;
  background: #fff;
  margin-top: 20rpx;
}
.detail_title{
  display: flex; 
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  font-size: 30rpx;
}
.detail_img{
  width: 100%;
  height: 400rpx;
  margin: 30rpx auto;
  overflow: hidden;
  border: 1rpx solid #eef2f7;
}
.detail_img image{
  width: 100%;
  height: 100%;
}
.save{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #e2ba00;
}
 .pickerAddr{
  width: 100%;
  height: 700rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 999999;
}
.pickerAddr .pick_title{
  width: 100%;
  height: 80rpx;
  padding: 20rpx 0;
  font-size: 35rpx;
  text-align: center;
}
.info{
  width: 100%;
  height: 100%;
}
.info_box{
  width: 155%;
  display: flex;
  flex-direction: row;
}
.info_box .posit{
  display: flex;
  margin-left: 20rpx;
}
.info_box .posit .editor{
  width: 200rpx;
  height: 150rpx;
  font-size:35rpx;
  line-height: 150rpx;
  background: #f9dd4d;
  color: #fff;
  text-align: center ;
}
.info_box .posit .del{
  width: 200rpx;
  height: 150rpx;
  font-size:35rpx;
  line-height: 150rpx;
  background: #e2ba00;
  color: #fff;
  text-align: center 
}
.info_msg_box{
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.info_msg{
  width:100%;
  height:150rpx;
  padding:20rpx 0;
  box-sizing:border-box;
}
.check_box{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #999;
}
.check_box image{
  width: 100%;
  height: 100%;
}
.info_msg_box .info_name{
  width: 150rpx;
  margin-left: 10rpx;
}
.info_msg .info_addr{
  font-size:25rpx;
  color: #999;
  margin-left: 70rpx; 
}	
.info_msg .info_phone{
  width: 200rpx;
}
::-webkit-scrollbar {
	  width: 0;
	  height: 0;
	  color: transparent;
}

.pickerAddr .pick_close_btn{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
  font-size: 40rpx;
  color: #999;
}
.pickerAddr .add_btn{
  width: 100%;
  position: absolute;
  bottom: 0;
}
.pickerAddr .add_btn button{
  width: 100%;
  height:100rpx;
  line-height: 100rpx;
  background: #e2ba00;
  color: #fff;
  font-size: 35rpx;
  border-radius: 0;
}
.ui-share-hover{
   opacity: 0.97;
   transform: scale(0.97,0.97);
 }
 .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 60;
}