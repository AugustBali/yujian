/* pages/detail/detail.wxss */
.detail{
  width: 100%;
  height: 100%;
  background: #eff2f9;
   position: relative;
}
.img_box{
  width: 100%;
  height: 500rpx;
  background: #fff;
  padding: 40rpx 0;
  box-sizing: border-box;
}
.box_item{
  width: 95%;
  height: 400rpx;
  border: 1rpx solid #eff2f9;
  margin: 0 auto;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  position: relative;
}
.box_item image{
  width: 100%;
  height: 100%;
}

.det_title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #e2ba00;
}
.product{
  width: 100%;
  height: 200rpx;
  background: #fff;
}
.product_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  
}
.p_img{
  width: 400rpx;
  height: 150rpx;
  background: #eff2f9;
}
.p_desc{
  width: 800rpx;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.p_stan{
   margin-top: 30rpx;
}
.p_price{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}
.p_price .price{
  width: 50%;
  color: #e2ba00;
  font-size: 30rpx;
  font-weight: 900;
}
.price .you{
  display: inline-block;
  margin-left: 10rpx;
  width: 60rpx;
  text-align: center;
  background: #e2ba00;
  color:#ffF;
  border-radius: 5rpx;
  font-size: 20rpx;
  font-weight:0;
}
.p_num{
  width: 50%;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  margin-left: 70rpx;
}
.p_num_item{
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  border: 1rpx solid #999;
}
.p_num_item.minus{
  border-right: none;
}
.p_num_item.add{
  border-left: none;
}
.p_num_item.number{
  width: 80rpx;
}
.addAddr{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  color: #999;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 10rpx;
}
.add_title{
  line-height: 100rpx;
}
.addAddr .addAddr_desc{
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  color: #000;
}
.addAddr_desc_name{
  margin-right:20rpx; 
}
.notice{
  width: 100%;
  height: 150rpx;
  background: #fff;
  margin-top:10rpx; 
  font-size: 25rpx;
  color: #999;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.imgDesc{
  width: 100%;
  height:100%;
  margin-top: 10rpx;
  background: #fff;
}
.img_desc_box{
  width: 100%;
  height: 1200rpx;
}
.img_desc_box image{
  width: 100%;
  height: 100%;
}
.img_desc_box.p4_img{
  height: 400rpx;
  margin-bottom: 100rpx;
}
.pay{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
}
.audit_btn{
  display: flex;
  width: 500rpx;
  font-size: 25rpx;
  color: #999;
  background: #fff;
  padding: 0 10rpx;
}
.pay_btn{
  width: 250rpx;
  background: #e2ba00;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}
