/* pages/help/help.wxss */
.help{
  width: 100%;
  height: 100vh;
  background: #eff2f9;
}
.help_content{
  width: 80%;
  position: fixed;
  top: 20rpx;
  left: 80rpx;
}
.scroll{
  width: 100%;
  height: 1030rpx;
}
	::-webkit-scrollbar {
	  width: 0;
	  height: 0;
	  color: transparent;
	}

.help_con_box{
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 35rpx 40rpx;
  margin-top: 25rpx;
  box-sizing: border-box;
}
.con_box_ask{
  width: 100%;
  height: 100rxp;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.ask_title, .answer_title{
  display: inline-block;
  width: 50rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius:10rpx; 
  background: #e2ba00;
  color: #fff;
  font-size: 30rpx;
}
.ask_text{
  display: inline-block;
  width: 450rpx;
  font-size: 30rpx;
  margin-left: 10rpx;
  font-weight: 900;
}
.con_box_answer{
  width: 100%;
  height: 100rxp;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.answer_title{
  background:#f9dd4d;
}
.answer_text{
  display: inline-block;
  width: 450rpx;
  font-size: 30rpx;
  margin-left: 10rpx;
  color: #999;
}
.adv_btn{
  width: 100%;
  height: 80rpx;
  line-height:80rpx; 
  font-size: 30rpx;
  color: #f9dd4d;
  text-align: center;
  background: #fff;
  margin-top: 25rpx;
  border-radius: 10rpx;
}
.btn_hover{
   opacity: 0.97;
   transform: scale(0.97,0.97);
}
.back_btn{
  position: fixed;
  bottom: 30rpx;
  width: 85%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size:30rpx;
  color:#fff; 
  background: #f9dd4d;
  left: 60rpx;
  border-radius: 10rpx;
}
