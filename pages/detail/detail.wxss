.pay .price{
  margin-left: 20rpx;
  color: #e2ba00;
  font-size: 30rpx;
  font-weight: 900;
}
.num_btn{
  background: #eff2f9;
}
.detail .pickerAddr{
  width: 100%;
  height: 700rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 999999;
}
.pickerAddr .pick_title{
  width: 100%;
  height: 80rpx;
  padding: 20rpx 0;
  font-size: 35rpx;
  text-align: center;
}
.info{
  width: 100%;
  height: 100%;
}
.info_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  overflow: scroll;
}
.info_box .posit{
  display: flex;
  margin-left: 20rpx;
}
.info_box .posit .editor{
  width: 100rpx;
  height: 100rpx;
  font-size:30rpx;
  line-height: 100rpx;
  background: #e2ba00;
  color: #fff;
  text-align: center ;
}
.info_box .posit .del{
  width: 100rpx;
  height: 100rpx;
  font-size:30rpx;
  line-height: 100rpx;
  background: red;
  color: #fff;
  text-align: center 
}
.info_msg_box{
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.info_msg{
  width:70%;
  height:120rpx;
  padding:10rpx 0;
  box-sizing:border-box;
}
.check_box{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #999;
}
.check_box image{
  width: 100%;
  height: 100%;
}
.info_msg_box .info_name{
  width: 150rpx;
  margin-left: 10rpx;
}
.info_msg .info_addr{
  font-size:25rpx;
  color: #999;
  margin-left: 70rpx; 
}	
.info_msg .info_phone{
  width: 200rpx;
}
::-webkit-scrollbar {
	  width: 0;
	  height: 0;
	  color: transparent;
}

.pickerAddr .pick_close_btn{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
  font-size: 40rpx;
  color: #999;
}
.pickerAddr .add_btn{
  width: 100%;
  position: absolute;
  bottom: 0;
}
.pickerAddr .add_btn button{
  width: 100%;
  height:100rpx;
  line-height: 100rpx;
  background: #e2ba00;
  color: #fff;
  font-size: 35rpx;
  border-radius: 0;
}
.ui-share-hover{
   opacity: 0.97;
   transform: scale(0.97,0.97);
 }
.detail .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 60;
}