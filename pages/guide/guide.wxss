/* pages/guide/guide.wxss */
.container{
  width: 100%;
  height: 100vh;
}
.bg_img{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  overflow: hidden;
}
.bg_img image{
  width: 100%;
  height: 100%;
}
.dingzhi{
  width: 60%;
  left: 150rpx;
  position: fixed;
  bottom: 200rpx;
}
.btn_box{
  width: 100%;
  height: 100rpx;
  background: #f9dd4d;
  border: 6rpx solid #000;
  border-radius: 10rpx;
}
 .ui-share-hover{
   opacity: 0.97;
   transform: scale(0.97,0.97);
 }
.btn_box .btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  font-weight: 900;
  border-radius:10rpx;
  text-align: center; 
  color:#fff;
  border-bottom: 6rpx solid #000;
  background: #e2ba00;
}
.tg_box{
  font-size: 25rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  color: #fff;
}

checkbox .wx-checkbox-input{
  border-radius: 50%;
  height: 26rpx;
  width: 26rpx;
  margin-top: -4rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;
   width: 26rpx; 
   height: 26rpx; 
   line-height: 26rpx;
   text-align: center;
   font-size:20rpx; 
   color:#0793ea; 
   background: none;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.ty{
  width: 50rpx;
  font-size: 20rpx;
}
.tg_text{
  display: block;
  font-size: 20rpx;
  width: 200rpx;
  border-bottom:1rpx solid #fff; 
  margin-left: 10rpx;
}
.showToast{
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  position: fixed;
  top: 550rpx;
  left: 150rpx;
  font-size: 25rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 10rpx;
}
.foot_btn{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
}
.foot_btn .help_btn, .foot_btn .order_btn{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: rgba(255,255,255,0.1);
  color: #FFF;
  font-size: 30rpx;
  font-weight: 900;
}
.foot_btn .help_btn{
  border-right: 3rpx solid rgba(255,255,255,0.6);
}
.iconfont{
  font-size: 30rpx;
}
.btn_hover{
   opacity: 0.9;
   transform: scale(0.9,0.9);
}