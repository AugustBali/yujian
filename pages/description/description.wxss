/* pages/description/description.wxss */

.container{
  width: 100%;
  height: 100vh;
  background: #eff2f9;
}
.desc_box{
  width: 80%;
  height: 950rpx;
  position: fixed;
  top: 30rpx;
  left: 75rpx;
  border-radius: 20rpx;
  background: #fff;
}
.desc_title{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fade4e;
  font-weight: 900;
  font-size: 35rpx;
  border-bottom: 1rpx solid #e8e8e8;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  letter-spacing:5rpx;
  background: #fff;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.desc_contetn{
  width: 85%;
  text-align: left;
  margin: 110rpx auto;
  /* border:1rpx solid #f00; */
}
.desc_contetn .con_box{
  font-size: 25rpx;
  color: #999;
  letter-spacing:5rpx;
 
}
.desc_contetn .con_box .con_box_item{
  margin-top: 20rpx;
}
.desc_contetn .con_box .num{
  display:inline-block;
  width:25rpx;
  height:25rpx;
  font-size: 20rpx;
  line-height: 25rpx;
  text-align: center;
  border-radius:50%;
  border:1rpx solid #999;
  margin-right: 10rpx;
  letter-spacing:0rpx;
}
.desc_footer{
  position: absolute;
  width: 100%;
  bottom: 0rpx;
}
.desc_footer .footer_btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  border-top:1rpx solid #e8e8e8;
   border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.desc_footer .ui-share-hover{
  background: #f5f4f4;
}

.confirm{
  width: 80%;
  position: fixed;
  bottom: 50rpx;
  left: 72rpx;
}
.confirm button{
  background: #e5bd03;
  color: #fff;
  font-size: 35rpx;
}
